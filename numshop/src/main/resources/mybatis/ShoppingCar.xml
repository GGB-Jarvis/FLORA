<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.num.shop.mapper.ShoppingCarMapper">
    <resultMap id="BaseResultMap" type="com.num.shop.entity.ShoppingCar">
        <result column="id" property="id"/>
        <result column="userid" property="userId"/>
        <result column="productid" property="productId"/>
        <result column="count" property="count"/>
    </resultMap>

    <!-- 表字段 -->
    <sql id="baseColumns">
        t.id
        , t.userid
        , t.productid
        , t.count
    </sql>

    <!-- 查询全部 -->
    <select id="listAll" resultMap="BaseResultMap" parameterType="com.num.shop.entity.ShoppingCar">
        SELECT
        <include refid="baseColumns"/>
        FROM shoppingcar t
        <where>
            userid = #{userId}
        </where>
        order by id desc
    </select>

    <!-- 插入全部字段 -->
    <insert id="insert" parameterType="com.num.shop.entity.ShoppingCar"
            keyProperty="id" keyColumn="id" useGeneratedKeys="true"
    >
        INSERT INTO shoppingcar
        <trim prefix="(" suffix=")" suffixOverrides=",">
            userid,
            productid,
            count,
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            #{userId},
            #{productId},
            #{count},
        </trim>
    </insert>

    <!-- 更新,更新全部字段 -->
    <update id="update" parameterType="com.num.shop.entity.ShoppingCar">
        UPDATE shoppingcar
        <set>
            userid=#{userid},
            productid=#{productid},
            count=#{count},
        </set>
        WHERE id = #{id}
    </update>


    <!-- 更新不为NULL的字段 -->
    <update id="updateIgnoreNull" parameterType="com.num.shop.entity.ShoppingCar">
        UPDATE shoppingcar
        <set>
            <if test="userid != null  and userid!=''">
                userid=#{userid},
            </if>
            <if test="productid != null  and productid!=''">
                productid=#{productid},
            </if>
            <if test="count != null  and count!=''">
                count=#{count},
            </if>
        </set>
        WHERE id = #{id}
    </update>


    <!-- 根据主键删除记录 -->
    <delete id="delete" parameterType="com.num.shop.entity.ShoppingCar">
        DELETE FROM shoppingcar
        WHERE productid = #{pid} and userid = #{userid}
    </delete>


</mapper>