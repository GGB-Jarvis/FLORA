<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.num.shop.mapper.OrdersMapper">
    <resultMap id="BaseResultMap" type="com.num.shop.entity.Orders">
        <result column="id" property="id"/>
        <result column="userid" property="userid"/>
        <result column="createtime" property="createtime"/>
        <result column="paytime" property="paytime"/>
        <result column="paytype" property="paytype"/>
        <result column="status" property="status"/>
        <result column="reserved" property="reserved"/>
        <result column="reserved2" property="reserved2"/>
        <result column="reserved3" property="reserved3"/>
        <result column="reserved4" property="reserved4"/>
        <result column="reserved5" property="reserved5"/>
        <association property="user" column="userid" select="com.num.shop.mapper.UserMapper.getById"></association>
        <collection property="list" column="id" select="com.num.shop.mapper.DetailsMapper.selectByOrderId"></collection>
    </resultMap>

    <!-- 表字段 -->
    <sql id="baseColumns">
         t.id
        , t.userid
        , t.createtime
        , t.paytime
        , t.paytype
        , t.status
        , t.reserved
        , t.reserved2
        , t.reserved3
        , t.reserved4
        , t.reserved5
        </sql>

    <!-- 查询全部 -->
    <select id="listAll" resultMap="BaseResultMap" parameterType="com.num.shop.entity.Orders">
        SELECT
        <include refid="baseColumns"/>
        FROM orders t
        <where>
            <if test="userid!=null and userid!=''">
                and userid = #{userid}
            </if>
            <if test="createtime!=null and createtime!=''">
                and createtime = #{createtime}
            </if>
            <if test="paytime!=null and paytime!=''">
                and paytime = #{paytime}
            </if>
            <if test="paytype!=null and paytype!=''">
                and paytype = #{paytype}
            </if>
            <if test="status!=null and status!=''">
                and status = #{status}
            </if>
            <if test="reserved!=null and reserved!=''">
                and reserved = #{reserved}
            </if>
            <if test="reserved2!=null and reserved2!=''">
                and reserved2 = #{reserved2}
            </if>
            <if test="reserved3!=null and reserved3!=''">
                and reserved3 = #{reserved3}
            </if>
            <if test="reserved4!=null and reserved4!=''">
                and reserved4 = #{reserved4}
            </if>
            <if test="reserved5!=null and reserved5!=''">
                and reserved5 = #{reserved5}
            </if>
        </where>
        order by id desc
        <if test="start!=null and pageSize !=0 ">
            limit #{start} , #{pageSize}
        </if>
    </select>
    <!-- 查询全部记录数量 -->
    <select id="total" resultType="int" parameterType="com.num.shop.entity.Orders">
        SELECT
        count(1)
        FROM orders t
        <where>
            <if test="userid!=null and userid!=''">
                and userid = #{userid}
            </if>
            <if test="createtime!=null and createtime!=''">
                and createtime = #{createtime}
            </if>
            <if test="paytime!=null and paytime!=''">
                and paytime = #{paytime}
            </if>
            <if test="paytype!=null and paytype!=''">
                and paytype = #{paytype}
            </if>
            <if test="status!=null and status!=''">
                and status = #{status}
            </if>
            <if test="reserved!=null and reserved!=''">
                and reserved = #{reserved}
            </if>
            <if test="reserved2!=null and reserved2!=''">
                and reserved2 = #{reserved2}
            </if>
            <if test="reserved3!=null and reserved3!=''">
                and reserved3 = #{reserved3}
            </if>
            <if test="reserved4!=null and reserved4!=''">
                and reserved4 = #{reserved4}
            </if>
            <if test="reserved5!=null and reserved5!=''">
                and reserved5 = #{reserved5}
            </if>
        </where>
    </select>
    <!-- 根据主键获取单条记录 -->
    <select id="getById" resultMap="BaseResultMap" parameterType="Integer">
        SELECT
        <include refid="baseColumns"/>
        FROM orders t
        WHERE id = #{id}
    </select>

    <!-- 插入全部字段 -->
    <insert id="insert" parameterType="com.num.shop.entity.Orders"
            keyProperty="id" keyColumn="id" useGeneratedKeys="true"
    >
        INSERT INTO orders
        <trim prefix="(" suffix=")" suffixOverrides=",">
            userid,
            createtime,
            paytime,
            paytype,
            status,
            reserved,
            reserved2,
            reserved3,
            reserved4,
            reserved5,
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            #{userid},
            #{createtime},
            #{paytime},
            #{paytype},
            #{status},
            #{reserved},
