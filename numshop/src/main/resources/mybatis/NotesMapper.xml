<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.num.shop.mapper.NotesMapper">
	<resultMap id="BaseResultMap" type="com.num.shop.entity.Notes">
            <result column="id" property="id" />
	        <result column="content" property="content" />
	        <result column="createtime" property="createtime" />
	        <result column="phone" property="phone" />
	        <result column="validitytime" property="validitytime" />
	        <result column="type" property="type" />
		</resultMap>  
    
    <!-- 表字段 -->
    <sql id="baseColumns">
         t.id
        , t.content
        , t.createtime
        , t.phone
        , t.validitytime
        , t.type
        </sql> 
    
    <!-- 查询全部 -->
    <select id="listAll" resultMap="BaseResultMap" parameterType="com.num.shop.entity.Notes">
		SELECT         
        	<include refid="baseColumns" />
		FROM notes t
        <where>
        	    			    		    			    				<if test="content!=null and content!=''">
                    	and content = #{content}
                    </if>
    			    		    			    				<if test="createtime!=null and createtime!=''">
                    	and createtime = #{createtime}
                    </if>
    			    		    			    				<if test="phone!=null and phone!=''">
                    	and phone = #{phone}
                    </if>
    			    		    			    				<if test="validitytime!=null and validitytime!=''">
                    	and validitytime = #{validitytime}
                    </if>
    			    		    			    				<if test="type!=null and type!=''">
                    	and type = #{type}
                    </if>
    			    		        </where>
        order by id desc
        <if test="start!=null and pageSize !=0 ">
            limit #{start} , #{pageSize}
        </if>
	</select>
 	<!-- 查询全部记录数量 -->
     <select id="total" resultType="int" parameterType="com.num.shop.entity.Notes">
     	SELECT         
        	count(1)
		FROM notes t
        <where>
        	    			    		    			    				<if test="content!=null and content!=''">
                    	and content = #{content}
                    </if>
    			    		    			    				<if test="createtime!=null and createtime!=''">
                    	and createtime = #{createtime}
                    </if>
    			    		    			    				<if test="phone!=null and phone!=''">
                    	and phone = #{phone}
                    </if>
    			    		    			    				<if test="validitytime!=null and validitytime!=''">
                    	and validitytime = #{validitytime}
                    </if>
    			    		    			    				<if test="type!=null and type!=''">
                    	and type = #{type}
                    </if>
    			    		        </where>
     </select>
 	<!-- 根据主键获取单条记录 -->
    <select id="getById" resultMap="BaseResultMap" parameterType="Integer">
		SELECT         
        	<include refid="baseColumns" />
		FROM notes t
		WHERE id = #{id}
	</select>

	<!-- 插入全部字段 -->
    <insert id="insert" parameterType="com.num.shop.entity.Notes"
		keyProperty="id" keyColumn="id" useGeneratedKeys="true"
    >
	INSERT INTO notes
    <trim prefix="(" suffix=")" suffixOverrides=",">	 
        	        	    	content,
    	        	    	createtime,
    	        	    	phone,
    	        	    	validitytime,
    	        	    	type,
    	        </trim>
    <trim prefix="VALUES (" suffix=")" suffixOverrides=",">            
        	        	        #{content},                   
    	        	        #{createtime},                   
    	        	        #{phone},                   
    	        	        #{validitytime},                   
    	        	        #{type},                   
    	        </trim>
	</insert>
    
    <!-- 插入不为NULL的字段 -->
    <insert id="insertIgnoreNull" parameterType="com.num.shop.entity.Notes"
        keyProperty="id" keyColumn="id" useGeneratedKeys="true"
        >
        INSERT INTO notes    
        <trim prefix="(" suffix=")" suffixOverrides=",">	 

                                                                            <if test="content != null  and content!=''">
                   content,
                    </if>
                                                                <if test="createtime != null  and createtime!=''">
                   createtime,
                    </if>
                                                                <if test="phone != null  and phone!=''">
                   phone,
                    </if>
                                                                <if test="validitytime != null  and validitytime!=''">
                   validitytime,
                    </if>
                                                                <if test="type != null  and type!=''">
                   type,
                    </if>
                                    </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">            
                                                                            <if test="content != null  and content!=''" >
                    #{content},                    
                    </if>
                                                                <if test="createtime != null  and createtime!=''" >
                    #{createtime},                    
                    </if>
                                                                <if test="phone != null  and phone!=''" >
                    #{phone},                    
                    </if>
                                                                <if test="validitytime != null  and validitytime!=''" >
                    #{validitytime},                    
                    </if>
                                                                <if test="type != null  and type!=''" >
                    #{type},                    
                    </if>
                                    </trim>
    </insert>

	<!-- 更新,更新全部字段 -->
    <update id="update" parameterType="com.num.shop.entity.Notes">
    UPDATE notes
     <set>		
                                     content=#{content},        
                                createtime=#{createtime},        
                                phone=#{phone},        
                                validitytime=#{validitytime},        
                                type=#{type},        
                   </set>	
    WHERE id = #{id}
    </update>  
    
    
    <!-- 更新不为NULL的字段 -->
    <update id="updateIgnoreNull" parameterType="com.num.shop.entity.Notes">
    UPDATE notes
    <set>
    	                                                <if test="content != null  and content!=''" >
                content=#{content},                 
                </if>
                                                <if test="createtime != null  and createtime!=''" >
                createtime=#{createtime},                 
                </if>
                                                <if test="phone != null  and phone!=''" >
                phone=#{phone},                 
                </if>
                                                <if test="validitytime != null  and validitytime!=''" >
                validitytime=#{validitytime},                 
                </if>
                                                <if test="type != null  and type!=''" >
                type=#{type},                 
                </if>
                        </set>
    WHERE id = #{id}
    </update>

		
	<!-- 根据主键删除记录 -->
	<delete id="delete" parameterType="com.num.shop.entity.Notes">
		DELETE FROM notes
		WHERE id = #{id}
	</delete>


</mapper>