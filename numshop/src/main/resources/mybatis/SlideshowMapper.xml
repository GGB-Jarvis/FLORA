<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.num.shop.mapper.SlideshowMapper">
    <resultMap id="BaseResultMap" type="com.num.shop.entity.Slideshow">
        <result column="id" property="id"/>
        <result column="imageurl" property="imageurl"/>
        <result column="status" property="status"/>
        <result column="createtime" property="createtime"/>
    </resultMap>

    <!-- 表字段 -->
    <sql id="baseColumns">
         t.id
        , t.imageurl
        , t.status
        , t.createtime
        </sql>

    <!-- 查询全部 -->
    <select id="listAll" resultMap="BaseResultMap" parameterType="com.num.shop.entity.Slideshow">
        SELECT
        <include refid="baseColumns"/>
        FROM slideshow t
        <where>
            <if test="imageurl!=null and imageurl!=''">
                and imageurl = #{imageurl}
            </if>
            <if test="status!=null and status!=''">
                and status = #{status}
            </if>
            <if test="createtime!=null and createtime!=''">
                and createtime = #{createtime}
            </if>
        </where>
        order by id desc
        <if test="start!=null and pageSize !=0 ">
            limit #{start} , #{pageSize}
        </if>
    </select>
    <!-- 查询全部记录数量 -->
    <select id="total" resultType="int" parameterType="com.num.shop.entity.Slideshow">
        SELECT
        count(1)
        FROM slideshow t
        <where>
            <if test="imageurl!=null and imageurl!=''">
                and imageurl = #{imageurl}
            </if>
            <if test="status!=null and status!=''">
                and status = #{status}
            </if>
            <if test="createtime!=null and createtime!=''">
                and createtime = #{createtime}
            </if>
        </where>
    </select>
    <!-- 根据主键获取单条记录 -->
    <select id="getById" resultMap="BaseResultMap" parameterType="Integer">
        SELECT
        <include refid="baseColumns"/>
        FROM slideshow t
        WHERE id = #{id}
    </select>

    <!-- 插入全部字段 -->
    <insert id="insert" parameterType="com.num.shop.entity.Slideshow"
            keyProperty="id" keyColumn="id" useGeneratedKeys="true"
    >
        INSERT INTO slideshow
        <trim prefix="(" suffix=")" suffixOverrides=",">
            imageurl,
            status,
            createtime,
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            #{imageurl},
            #{status},
            #{createtime},
        </trim>
    </insert>

    <!-- 插入不为NULL的字段 -->
    <insert id="insertIgnoreNull" parameterType="com.num.shop.entity.Slideshow"
            keyProperty="id" keyColumn="id" useGeneratedKeys="true"
    >
        INSERT INTO slideshow
        <trim prefix="(" suffix=")" suffixOverrides=",">

            <if test="imageurl != null  and imageurl!=''">
                imageurl,
            </if>
            <if test="status != null  and status!=''">
                status,
            </if>
            <if test="createtime != null  and createtime!=''">
                createtime,
            </if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="imageurl != null  and imageurl!=''">
                #{imageurl},
            </if>
            <if test="status != null  and status!=''">
                #{status},
            </if>
            <if test="createtime != null  and createtime!=''">
                #{createtime},
            </if>
        </trim>
    </insert>

    <!-- 更新,更新全部字段 -->
    <update id="update" parameterType="com.num.shop.entity.Slideshow">
        UPDATE slideshow
        <set>
            imageurl=#{imageurl},
            status=#{status},
            createtime=#{createtime},
        </set>
        WHERE id = #{id}
    </update>


    <!-- 更新不为NULL的字段 -->
    <update id="updateIgnoreNull" parameterType="com.num.shop.entity.Slideshow">
        UPDATE slideshow
        <set>
            <if test="imageurl != null  and imageurl!=''">
                imageurl=#{imageurl},
            </if>
            <if test="status != null  and status!=''">
                status=#{status},
            </if>
            <if test="createtime != null  and createtime!=''">
                createtime=#{createtime},
            </if>
        </set>
        WHERE id = #{id}
    </update>


    <!-- 根据主键删除记录 -->
    <delete id="delete" parameterType="com.num.shop.entity.Slideshow">
		DELETE FROM slideshow
		WHERE id = #{id}
	</delete>


</mapper>